{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@server/*": [
        "./server/*"
      ]
    },
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./bin",
    "rootDir": "./server",
    "typeRoots": [],
    "types": [],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/**/*"
  ]
}